<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.an.hotelservice">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".Room.MyApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Login.Register" />
        <activity android:name=".Login.Users" />
        <activity android:name=".Room.RoomList" />
        <activity android:name=".Room.RoomDetail" />
        <activity android:name=".Room.RoomFinder" />
        <activity android:name=".Login.Chat" />
        <activity android:name=".Login.Login" />
        <activity android:name=".Service.MainService" />
        <activity android:name=".Login.ChatClient" />
        <activity android:name=".Service.Payment.PaymentList" />
        <activity android:name=".Room.GuestBuy" />
        <activity android:name=".Service.RoomService.RoomService" />
        <activity android:name=".Room.RoomImg" />
        <activity android:name=".Service.About"></activity>
    </application>

</manifest>